<div class="general-form">
  <%= form_with do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, require: "true" %>
    </div>
    <div class="form-group">
      <%= f.label :email_address %>
      <%= f.email_field :email_address, required: "true" %>
    </div>
    <div class="form-group">
      <%= f.label :how_can_we_help_you %>
      <%= f.text_area :how_can_we_help_you, rows: "7", cols: "100" %>
    </div>
    <div class="form-group">
      <%= link_to "Submit", "#", class: "btn-submit" %>
    </div>
  <% end %>
</div>