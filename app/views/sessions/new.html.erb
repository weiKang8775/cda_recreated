<div class="general-form">
  <%= form_with(scope: :session, url: login_path, local: true) do |f| %>
    <div class="form-group">
      <%= f.label :username %>
      <%= f.text_field :username, placeholder: "Enter your username", required: "true" %>
    </div>
    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: "Enter your password", required: "true" %>
    </div>
    <%= f.submit "Log in" %>
    <%= link_to "Cancel", root_path %>
  <% end %>
</div>